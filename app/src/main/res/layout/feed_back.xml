<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yeahs.www.qrcode.FeedBack">
    <LinearLayout
        android:id="@+id/feed_back_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/feed_back_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/feed_back_label"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_gravity="start"
                android:text="问题反馈"/>
            <EditText
                android:id="@+id/feed_back_text"
                android:layout_width="240dp"
                android:layout_height="120dp"
                android:layout_gravity="start"
                android:gravity="top"
                android:padding="10dp"
                android:textSize="12dp"
                android:background="@drawable/bg_edittext"
                android:hint="请输入您要反馈的内容..."
                android:textCursorDrawable="@null"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/feed_back_btn_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/feed_back_btn"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:background="#14c4a0"
                android:textColor="#fff"
                android:text="提交"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
